<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	<managed-bean>
		<managed-bean-name>mainBean</managed-bean-name>
		<managed-bean-class>beans.MainBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>queryAvailabilityBean</managed-bean-name>
		<managed-bean-class>beans.QueryAvailabilityBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>setAvailabilityBean</managed-bean-name>
		<managed-bean-class>beans.SetAvailabilityBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>main.xhtml</display-name>
		<from-view-id>/main.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>query-availability</from-outcome>
			<to-view-id>/query-availability.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>main.xhtml</display-name>
		<from-view-id>/main.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>set-availability</from-outcome>
			<to-view-id>/set-availability.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>set-availability.xhtml</display-name>
		<from-view-id>/set-availability.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>main</from-outcome>
			<to-view-id>/main.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>query-availability.xhtml</display-name>
		<from-view-id>/query-availability.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>main</from-outcome>
			<to-view-id>/main.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>